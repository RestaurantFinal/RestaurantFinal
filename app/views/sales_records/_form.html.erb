<%= form_with(model: sales_record) do |form| %>
<% if sales_record.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(sales_record.errors.count, "error") %> prohibited this sales_record from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% sales_record.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :date, class: label_class %>
          <%= form.date_field :date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :product_name, class: label_class %>
          <%= form.text_field :product_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :product_id, class: label_class %>
          <%= form.number_field :product_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.text_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :revenue, class: label_class %>
          <%= form.text_field :revenue, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if sales_record.persisted? %>
<%= link_to "Cancel", sales_record, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", sales_records_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
