  <ul class="list-disc leading-relaxed">
    <% channel.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :Orders, class: label_class %>
          <%= form.text_field :Orders, class: input_class %>
